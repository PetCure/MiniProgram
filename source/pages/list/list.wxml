<!--pages/list/list.wxml-->

<view class='flex-row tabs'>
  <view class='flex-1 tab  flex-row' wx:for="{{catlist}}" wx:key="k" wx:for-index="idx" bindtap='changeTab' id="{{idx}}">
    <view class='flex-1'></view>
    <view class='txt-light tabtext  {{currenttab==idx?"active":""}}'>{{item.name}}</view>
    <view class='flex-1'></view>
  </view>
</view>


<swiper indicator-dots="{{false}}" class='bottomtabs ' current='{{currenttab}}' bindchange="changeCurrentTab" class="maintab">
    <swiper-item  wx:for="{{catlist}}" wx:key="k" wx:for-index="idx" >
      <scroll-view scroll-y style='height:100%' bindscrolltolower="onReachBottom" bindscrolltoupper="loaddata">

<view  wx:for="{{item.postlist}}" wx:key="k">
  <navigator url='/pages/info/info?shownext=Y&id={{item.id}}' class='white-block margin-40 item'>
    <view class='cover'>
      <image src='{{uploadpath}}post/{{item.cover}}' mode='aspectFill'></image>
    </view>
    <view class='padding-20 flex-row '>
      <view class='memberphoto' style='margin-right:20rpx;'>
        <image class='icon' style='border-radius:50%;' src='{{item.member_avatarUrl}}'  ></image>
      </view>
      <view class='flex-1'>
        <view>{{item.title}}</view>
        <view class='h6 txt-gray'>{{item.summary}}</view>
        <view class='h6 txt-gray' style='margin-top:10rpx;'>{{item.mile}} {{item.timeduration}}</view>
      </view>
      <view>
        <view class='h6 txt-gray text-right'>
          <view class='h6 lab'>{{item.cat_id_name}}</view>
        </view>
      </view>
    </view>
  </navigator>
</view>


      </scroll-view>
    </swiper-item>
  </swiper>



