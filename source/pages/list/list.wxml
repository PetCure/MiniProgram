<!--pages/list/list.wxml-->

<view class='flex-row tabs'>
  <view class='flex-1 tab  flex-row' wx:for="{{catlist}}" wx:key="k" wx:for-index="idx" bindtap='changeTab' id="{{idx}}">
    <view class='flex-1'></view>
    <view class='txt-light tabtext  {{currenttab==idx?"active":""}}'>{{item.name}}</view>
    <view class='flex-1'></view>
  </view>
</view>


<swiper indicator-dots="{{false}}" class='bottomtabs ' current='{{currenttab}}' bindchange="changeCurrentTab" class="maintab">
    <swiper-item  wx:for="{{catlist}}" wx:key="k" wx:for-index="idx" >
      <scroll-view scroll-y style='height:100%' bindscrolltolower="onReachBottom" bindscrolltoupper="loaddata">

<view  wx:for="{{item.postlist}}" wx:key="k" class='white-block border-bottom'>
  <view url='/pages/info/info?shownext=Y&id={{item.id}}' class='margin-40 item' style='margin-top:0rpx;margin-bottom:0rpx;'>
    <view url='/pages/memberinfo/memberinfo?id={{item.member_id}}' class='padding-20 flex-row ' style='padding-right:0rpx;padding-left:0rpx;'>
      <navigator url='/pages/memberinfo/memberinfo?id={{item.member_id}}'  class='memberphoto' style='margin-right:20rpx;'>
        <image class='icon' style='border-radius:50%;' src='{{item.member_avatarUrl}}'  ></image>
      </navigator>
      <navigator url='/pages/memberinfo/memberinfo?id={{item.member_id}}'  class='h6 flex-1'>
        {{item.member_nickName}}
      </navigator>
      <view class='margin-right-10'  wx:if="{{item.member_id!=memberinfo.id}}">
        <view class='h6 padding-5 gray-block border-radius-40 txt-white' wx:if="{{item.viewed==0}}">未读</view>
        <view class='h6 padding-5 bg-blue border-radius-40 txt-white' wx:if="{{item.viewed>0}}">已读</view>
      </view>
      <view  class='margin-right-10'  wx:if="{{item.member_id!=memberinfo.id&&false}}">
        <navigator url='/pages/chatroom/chatroom?member_id={{item.member_id}}' class='h6 padding-5 bg-primary border-radius-40 txt-white' >发消息</navigator>
      </view>
      <navigator url='/pages/memberinfo/memberinfo?id={{item.member_id}}'    wx:if="{{item.member_id!=memberinfo.id}}">
        <view class='h6 padding-5 bg-orange border-radius-40 txt-white' wx:if="{{item.followed_member_id==0}}">加关注</view>
        <view class='h6 padding-5 gray-block border-radius-40 txt-white' wx:if="{{item.followed_member_id>0}}">已关注</view>
      </navigator>
    </view>
    <navigator url='/pages/info/info?shownext=Y&id={{item.id}}'  class='cover'>
      <image src='{{uploadpath}}post/{{item.cover}}' mode='aspectFill'></image>
    </navigator>
    <navigator url='/pages/info/info?shownext=Y&id={{item.id}}'   class='padding-20 flex-row '>
      <view class='flex-1'>
        <view class='flex-row flex-center'>
        <view class='flex-1'>
        
        {{item.title}}
        </view>
      <view>
        <view class='h6 txt-gray text-right'>
          <view class='h6 lab'>{{item.cat_id_name}}</view>
        </view>
      </view></view>
        <view class='h6 txt-gray margin-top-10'>{{item.summary}}</view>
        <view class='h6 txt-gray' style='margin-top:10rpx;'>{{item.mile}} {{item.timeduration}}</view>
      </view>
    </navigator>
  </view>
</view>


      </scroll-view>
    </swiper-item>
  </swiper>



